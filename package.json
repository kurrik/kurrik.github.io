{
  "name": "kurrik.github.io",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build:ts": "tsc",
    "build:assets": "cpx \"src/**/*.{html,css,png,jpg,svg}\" dist",
    "build": "npm run clean && npm run build:ts && npm run build:assets",
    "dev:ts": "tsc --watch",
    "dev:assets": "cpx \"src/**/*.{html,css,png,jpg,svg}\" dist --watch",
    "dev:serve": "serve dist -l 3000",
    "dev": "concurrently \"npm:dev:ts\" \"npm:dev:assets\" \"npm:dev:serve\""
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "cpx": "^1.5.0",
    "concurrently": "^8.0.0",
    "serve": "^14.0.0"
  }
}
